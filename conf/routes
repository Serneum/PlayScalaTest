# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index

GET         /workers             controllers.Application.workers

GET         /fileList            controllers.files.FileResource.fileList
POST        /upload              controllers.files.FileResource.upload()
GET         /deleteFile/:name    controllers.files.FileResource.deleteFile(name: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)

